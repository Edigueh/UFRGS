{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current Project Folder",
            "type": "shell",
            "command": "gcc -g -o \"${fileDirname}/main\" \"${fileDirname}\"/*.c",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles all .c files in the active project subfolder."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang générer le fichier actif",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ]
}